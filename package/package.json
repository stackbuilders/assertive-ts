{
  "name": "@stackbuilders/assertive-ts",
  "version": "0.0.0",
  "description": "A type-safe fluent assertion library",
  "repository": "git@github.com:stackbuilders/assertive-ts.git",
  "homepage": "https://stackbuilders.github.io/assertive-ts/",
  "author": "Stack Builders <info@stackbuilders.com>",
  "license": "MIT",
  "keywords": [
    "assertions",
    "testing",
    "testing-tools",
    "type-safety",
    "typescript"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=16 <=19"
  },
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "check": "yarn compile && yarn test --forbid-only",
    "compile": "tsc -p tsconfig.json",
    "docs": "typedoc",
    "release": "semantic-release",
    "test": "cross-env NODE_ENV=test TS_NODE_TRANSPILE_ONLY=true mocha"
  },
  "dependencies": {
    "@cometlib/dedent": "^0.8.0-es.10"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.2",
    "@types/sinon": "^10.0.15",
    "all-contributors-cli": "^6.26.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "semantic-release": "^21.0.6",
    "sinon": "^15.2.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typedoc-plugin-merge-modules": "^5.0.1",
    "typescript": "^5.1.6"
  }
}
