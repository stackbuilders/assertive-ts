{
  "name": "@stackbuilders/assertive-ts",
  "version": "0.0.0",
  "description": "A type-safe fluent assertion library",
  "repository": "git@github.com:stackbuilders/assertive-ts.git",
  "homepage": "https://stackbuilders.github.io/assertive-ts/",
  "author": "Stack Builders <info@stackbuilders.com>",
  "license": "MIT",
  "keywords": [
    "assertions",
    "testing",
    "testing-tools",
    "type-safety",
    "typescript"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=16 <=19"
  },
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "check": "yarn compile && yarn test --forbid-only",
    "compile": "tsc -p tsconfig.json",
    "pages": "typedoc",
    "release": "semantic-release",
    "test": "cross-env NODE_ENV=test TS_NODE_TRANSPILE_ONLY=true mocha"
  },
  "dependencies": {
    "@cometlib/dedent": "^0.8.0-es.10"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.2",
    "@types/sinon": "^10.0.13",
    "all-contributors-cli": "^6.24.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "semantic-release": "^20.1.0",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.26",
    "typedoc-plugin-markdown": "^3.14.0",
    "typedoc-plugin-merge-modules": "^4.0.1",
    "typescript": "^4.9.5"
  }
}
